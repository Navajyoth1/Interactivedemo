<body>

    <h1>üôà Copycat Cards!</h1>
    <p>Click a card, then <strong>DO THE POSE!</strong></p>

    <div class="grid-container" id="board">
        </div>

    <button class="btn-reset" onclick="resetGame()">Shuffle & Play Again</button>

    <script>
        // THE 6 ACTIVITIES
        const activities = [
            { icon: "ü¶∏", text: "Super Hero!", color: "#ffe66d" },
            { icon: "üê∞", text: "Bunny Ears!", color: "#ff9f43" },
            { icon: "ü§™", text: "Funny Face!", color: "#54a0ff" },
            { icon: "üò¥", text: "Sleepy Head!", color: "#c8d6e5" },
            { icon: "üí™", text: "Muscle Man!", color: "#ff6b6b" },
            { icon: "ü•∂", text: "FREEZE!", color: "#48dbfb" }
        ];

        const board = document.getElementById('board');

        function initGame() {
            board.innerHTML = '';
            // Shuffle (Optional: remove sort if you want fixed order)
            const shuffled = [...activities].sort(() => 0.5 - Math.random());

            shuffled.forEach((item, index) => {
                const cardHTML = `
                <div class="card" onclick="flipCard(this)">
                    <div class="card-inner">
                        <div class="card-front">
                            ?
                            <span>Tap Me</span>
                        </div>
                        <div class="card-back" style="background-color: ${item.color}33;"> <div class="emoji-large">${item.icon}</div>
                            <div class="action-text">${item.text}</div>
                        </div>
                    </div>
                </div>
                `;
                board.innerHTML += cardHTML;
            });
        }

        function flipCard(card) {
            // Only flip if not already flipped
            if (!card.classList.contains('flipped')) {
                card.classList.add('flipped');
                // Optional: Play a "pop" sound here
            }
        }

        function resetGame() {
            // Flip all back first
            const cards = document.querySelectorAll('.card');
            cards.forEach(c => c.classList.remove('flipped'));

            // Wait 0.5s for animation, then reshuffle
            setTimeout(initGame, 600);
        }

        // Start
        initGame();

    </script>
</body>
