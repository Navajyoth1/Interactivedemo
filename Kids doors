    <script>
        function interactDoor(wrapper) {
            const door = wrapper.querySelector('.door');
            
            // State 1: If door is closed, Start KNOCKING
            if (!door.classList.contains('open') && !door.classList.contains('knocking')) {
                door.classList.add('knocking');
                // Teacher cue
                console.log("Knocking..."); 
            } 
            // State 2: If door is knocking, OPEN IT
            else if (door.classList.contains('knocking')) {
                door.classList.remove('knocking');
                door.classList.add('open');
            }
            // State 3: If door is open, CLOSE IT (Optional)
            else if (door.classList.contains('open')) {
                door.classList.remove('open');
            }
        }
    </script>
